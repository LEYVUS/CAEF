@model CAEF.ViewModels.UsuarioDTO
@{
    ViewBag.Title = "Sistema de Control de Actas de Evalucaci&oacute;n Final";
    ViewBag.PageName = "Agregar Usuario";
    Layout = "_Layout";
}
<div class="tab-content col-md-10">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Agregar usuario administrativo</h3>
        </div>
        <div class="panel-body">
            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly"></div>
                    @if (ViewBag.Mensaje != null)
                    {
                        <div>@ViewBag.Mensaje</div>
                    }
                    <label for="numeroEmpleado" class="col-md-3 control-label">N&uacute;mero de empleado:</label>
                    <div class="col-md-7">
                        <span asp-validation-for="Id"></span>
                        <input type="text" asp-for="Id" class="form-control" id="numeroEmpleado" placeholder="Número">
                    </div>
                </div>
                <div class="form-group">
                    <label for="correoEmpleado" class="col-md-3 control-label">Correo:</label>
                    <div class="col-md-7">
                        <span asp-validation-for="Correo"></span>
                        <input type="email" asp-for="Correo" class="form-control" id="correoEmpleado" placeholder="Correo electrónico">
                    </div>
                </div>
                <div class="form-group">
                    <label for="rolEmpleado" class="col-md-3 control-label">Rol del administrativo:</label>
                    <div class="col-md-7">
                        <select asp-for="RolId" class="form-control" id="rolEmpleado">
                            @foreach (var rol in ViewBag.Roles)
                            {
                                <option value="@rol.Id">@rol.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8">

                    </div>
                    <div class="col-md-2">
                        <input type="submit" value="Agregar" class="btn btn-primary">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>